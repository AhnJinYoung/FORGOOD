{
  "name": "@forgood/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env FORGOOD_MODE=test tsx watch src/index.ts",
    "dev:test": "cross-env FORGOOD_MODE=test dotenv_config_path=.env.test tsx watch src/index.ts",
    "dev:serving": "cross-env FORGOOD_MODE=serving tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:test": "cross-env FORGOOD_MODE=test dotenv_config_path=.env.test tsx src/index.ts",
    "start:serving": "cross-env FORGOOD_MODE=serving node dist/index.js",
    "smoke:test": "node scripts/smoke-test.mjs",
    "lint": "echo 'api: no lint configured'",
    "typecheck": "tsc -p tsconfig.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.0.0",
    "@forgood/agent": "workspace:*",
    "@forgood/shared": "workspace:*",
    "@openrouter/sdk": "^0.8.0",
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "viem": "^2.21.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "cross-env": "^10.1.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3"
  }
}
